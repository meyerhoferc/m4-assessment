<!DOCTYPE html>
<html>
<head>
  <title>URLockBox</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <%= flash.each do |type, message| %>
    <div class="<%= type %>">
      <p><%= sanitize(message) %></p>
    </div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
