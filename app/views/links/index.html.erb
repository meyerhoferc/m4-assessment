<%= link_to 'Sign Out', logout_path %>
<div class="container">
  <div class="row">
    <%= form_for(@link) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :url %>
        <%= f.text_field :url, class: 'form-control' %>
      </div>

      <%= f.submit 'Submit URL', class: 'btn btn-success' %>
    <% end %>

    <div class="links">
      <table class='table table-striped'>
        <thead>
          <th>Title</th>
          <th>Link</th>
          <th>Read?</th>
          <th>Edit</th>
        </thead>
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td><%= link.title %></td>
              <td>
                <%= link_to link.url, link.url %>
              </td>
              <% if link.read %>
                <td>
                  Read
                  <button type="btn btn-info" name="button" data-link-id='<%= link.id %>'>Mark as Unread</button>
                </td>
              <% else %>
                <td>
                  Unread
                  <button type="btn btn-info" name="button" data-link-id='<%= link.id %>'>Mark as Read</button>
                </td>
              <% end %>
              <td><%= link_to 'Edit', edit_link_path(link) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
